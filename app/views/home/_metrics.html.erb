<script type="text/javascript">

    $(function() {

            var c3_height = 200;
            var c3_width = 420;

            if (screen.width <= 1024){ c3_width = 200;}

            //GRAFICO DE ATENDIMENTO
            c3.generate({
                bindto: '#pieAtendimentos',
                size: {
                        height: c3_height,
                        width: c3_width
                },
                data:{
                    columns: [
                        ['Em Atendimento', 30],
                        ['Pendente', 120],
                        ['Cancelada', 25],
                        ['Resolvido', 22]
                    ],
                    colors:{
                        data1: '#1c84c6',
                        data2: '#ffc107',
                        data2: '#ED5565',
                        data2: '#1ab394'
                    },
                    type : 'pie'
                },
                tooltip: {
                    format: {
                        value: function (value, ratio, id) {
                            var format = id === 'data1' ? d3.format(',') : d3.format('');
                            return format(value);
                        }
                    }
                }
            });

            //GRAFICO DE TAREFAS
             c3.generate({
                bindto: '#pieTarefas',
