                        ['Pendente', 25],
                        ['Cancelada', 10],
                        ['Resolvido', 15]
                    ],
                    colors:{
                        data1: '#1c84c6',
                        data2: '#ffc107',
                        data2: '#ED5565',
                        data2: '#1ab394'
                    },
